<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview11"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="400dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/piano1" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="400dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/piano2" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="400dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/piano3" />

                        </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piano"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview12"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rolandtd1k" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rolandtd1k_2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rolandtd1k_3" />

                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drum"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview13"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/electricguitar" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/electricguitar2" />


                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electric Guitar"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview14"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/violin" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/violin2" />


                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Violin"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
