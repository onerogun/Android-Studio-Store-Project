<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/iphone11pro" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/iphone11pro_2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/iphone11pro_3" />

                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iphone 11 Pro"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/samsunggalaxys10e" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/samsunggalaxys10e_2" />


                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung Galaxy S10E"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview3"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/xiaomimi9t" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/xiaomimi9t_1" />


                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xiaomi Mi 9T"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview4"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/sansunggalaxys10plus" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/sansunggalaxys10plus_2" />


                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung Galaxy S10 Plus"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
